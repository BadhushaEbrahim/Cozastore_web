<body>
    <div class="registration-form">
        <form action="/admin/editCategories/{{categoryList._id}}" method="post" onsubmit="return validateForm()">
            <h5 class="text-danger">EDIT CATEGORIES</h5>
            <br>
            <div class="form-group">
                <label for="">Category</label>
                <input type="text" class="form-control item" name="category" placeholder="Product Category" value="{{categoryList.category}}">
            </div>
            <div class="form-group">
                <label for="">Sub Category</label>
                <input type="text" class="form-control item" name="subCategory" placeholder="Product Category" value="{{categoryList.subCategory}}">
            </div>
            <div class="form-group text-center ">
                <button type="submit" class="btn btn-block create-account">SAVE</button>
            </div>
        </form>
    </div>

    <script>
        function validateForm() {
            var category = document.forms[0].elements['category'].value;
            var subCategory = document.forms[0].elements['subCategory'].value;

            // Perform your validation logic here
            if (category.trim() === '' || subCategory.trim() === '') {
                swal('Validation Error', 'Please fill in all fields', 'error');
                return false; // Prevent form submission
            }

            swal('Success', 'Category updated!', 'success');
            return true; // Allow form submission
        }
    </script>
</body>
