<body>
    <br>
   <a href="/admin/addBanners"><button style="width:140px ;margin-left:50px" type="button" class="btn btn-primary">Add Banners</button></a>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Title</th>
                <th>Image1</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            {{#each banners}}
            <tr>
                <td>{{inc @index}}</td>
                <td>{{this.name}}</td>
                <td>{{this.title}}</td>
                <td><img style="width:60px ;height:60px" src="/banner-images/{{this.banimg}}" alt=""></td>
                <td>
                    <a href="/admin/edit-banner?id={{this._id}}" class="btn btn-primary">EDIT</a>
                    <button class="btn btn-danger" onclick="confirmDelete('{{this.name}}', '{{this._id}}')">DELETE</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <script>
        function confirmDelete(name, id) {
            swal({
                title: 'Are you sure?',
                text: `Are you sure to delete ${name}?`,
                icon: 'warning',
                buttons: ['Cancel', 'Delete'],
                dangerMode: true,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    // Perform the deletion
                    window.location.href = `/admin/deleteBanners/${id}`;
                }
            });
        }
    </script>
</body>
